@using WindowsOrders.BLL.ApiServices
@using WindowsOrders.BLL.Repos.Dtos

<select id="@elementId" class="form-control sel-types">
    <option value="0"></option>

    @foreach (var item in statesDtos)
    {
        if (@selectedInx == @item.id)
        {
            <option value="@item.id" selected>@item.name</option>
        }
        else
        {
            <option value="@item.id">@item.name</option>
        }
    }
</select>

@code {
    [Inject]
    private IApiService apiService { get; set; }

    [Parameter]
    public string elementId { get; set; }

    [Parameter]
    public int selectedInx { get; set; }

    private IEnumerable<TypesDto> statesDtos { get; set; } = new List<TypesDto>();

    protected override async Task OnInitializedAsync()
    {
        this.statesDtos = await this.apiService.GetTypesAsync();
    }
}
